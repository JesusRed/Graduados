<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Graduados"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>graduado.entities.Administrador</class>
		<class>graduado.entities.Evento</class>
		<class>graduado.entities.Eventoprin</class>
		<class>graduado.entities.Expdest</class>
		<class>graduado.entities.Experiencia</class>
		<class>graduado.entities.Graddestacado</class>
		<class>graduado.entities.Graduado</class>
		<class>graduado.entities.Noticia</class>
		<class>graduado.entities.Notide</class>
		<class>graduado.entities.Ofertalab</class>
		<class>graduado.entities.Directoradmin</class>
		
	
		<properties>
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQLDialect" /> <!-- DB Dialect -->
			<property name="hibernate.show_sql" value="true" /> <!-- Show SQL in console -->
			<property name="hibernate.format_sql" value="true" />
			<property name="eclipselink.jdbc.batch-writing"
				value="Buffered" />
			<property name="eclipselink.ddl-generation"
				value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://ingsistemasufps.co:3306/graduados_db1" />
			<property name="javax.persistence.jdbc.user"
				value="graduados_gra1" />
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.password" value="graduadosadmin"/>
		</properties>
	</persistence-unit>
</persistence>